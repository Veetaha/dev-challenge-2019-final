  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Veetaha/ts-nestjs-angular-template/issues"
  },
  "homepage": "https://github.com/Veetaha/ts-nestjs-angular-template#readme",
  "dependencies": {
    "class-transformer": "latest",
    "class-transformer-validator": "latest",
    "class-validator": "latest",
    "graphql": "^14.2.1",
    "joi": "latest",
    "lodash": "latest",
    "mathjs": "latest",
    "reflect-metadata": "latest",
    "rimraf": "latest",
    "rxjs": "latest",
    "ts-node": "latest",
    "ts-typedefs": "^2.3.0",
    "tslib": "latest",
    "typesafe-joi": "latest",
    "typescript": "^3.5.0-dev.20190410",
