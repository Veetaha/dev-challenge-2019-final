{
  "name": "ts-nestjs-angular-template",
  "version": "1.0.0",
  "description": "Fullstack TypeScript, NestJS, Angular7+ project.",
  "main": "backend/dist/backend/src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "(cd frontend && npm run build)",
    "start": "(cd backend  && npm run start)",
    "dev":   "(cd backend  && npm run dev)",
    "docker":  "docker-compose up",
    "docker:dev": "docker-compose --file debug.docker-compose.yml up",
    "postinstall": "npm install --prefix backend && npm install --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Veetaha/ts-nestjs-angular-template.git"
  },
  "keywords": [
    "template",
    "project",
    "starter"
  ],
